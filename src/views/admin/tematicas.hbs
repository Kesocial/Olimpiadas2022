{{>navbarAdmin}}

<div class="fondoAdd  tematicas-modificador">
  <div
    class="add form-main block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg text-gray-800">
    <h1 class="text-3xl font-bold text-center">Añadir temática</h1>
    <form action="/admin/tematicas/add" method="post" class="mt-4">
      <input require
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white"
        placeholder="titulo" required type="text" name="titulo" />
          
        <textarea required name="descripcion" rows="4"
            class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
            placeholder="Descripcion"></textarea>

      <label class="file-label block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300" for="file_input">Subir
        imagen</label>
      <input required
        class="block w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 cursor-pointer dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400"
        name="dataImg" id="file_input" type="file">

      <input type="text" hidden name="dataImg" id="dataImg" />
      <img id="prevImg" src="" alt="">
      <input require
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white"
        type="submit" value="Enviar">

    </form>
    <button id="cerrarAdd"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: rgba(0, 0, 0, 1);transform: ;msFilter:;"><path d="m16.192 6.344-4.243 4.242-4.242-4.242-1.414 1.414L10.535 12l-4.242 4.242 1.414 1.414 4.242-4.242 4.243 4.242 1.414-1.414L13.364 12l4.242-4.242z"></path></svg></button>

  </div>
</div>
<main class="form-main  ">
  <h2 class=" section__titulo">Temática</h2>

  <section class="tematicas ">

    {{#each tematicas}}
      <div class="tematicas__tematica">
        <div class="tematicas__contenedor-img">
          <img class="tematicas__img" src={{dataImg}} alt="">
        </div>
        <h2 class=" tematicas__titulo">
          {{titulo}}
        </h2>
        <div class="tematicas__content">
          <p class="tematicas__descripcion">{{descripcion}}</p>
          <p class="tematicas__descripcion">{{timeago fechaDeSubida}}</p>
        </div>
        <div class="admin-options">
          <a href="/admin/tematicas/delete/{{{_id}}}">Borrar</a>
          <a href="/admin/tematicas/edit/{{{_id}}}">Editar</a>
        </div>
      </div>
    {{/each}}
  </section>
</main>

